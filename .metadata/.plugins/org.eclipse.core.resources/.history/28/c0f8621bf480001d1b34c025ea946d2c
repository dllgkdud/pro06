<body>
    <section class="container">
        <h2>Ajax 문서 송수신 메소드 - ajax()</h2>
        <article class="data">
            <div><h2>AJAX Data Trans</h2></div>
            <form>
                <table>
                    <tr>
						<td>
                            <input type="text" id="id" name="id" placeholder="아이디 입력" required>
                        </td>
                        <td>
                        	<input type="text" id="pw" name="pw" placeholder="비밀번호 입력" required>
                        </td>
                    </tr>
                    <div id="msg"></div>
                    <ul id="result"></ul>
                </table>
                <br>
                <button type="button" id="btn1">로그인</button>
            </form>
        </article>
    </section>
    <br><hr><br>
    <script>
    $(document).ready(function(){
        $("#btn1").click(function(){
			var id = $("#id").val();
			$("#reault").empty();
			
			if(id==""){
				alert("아이디를 입력하십시오.");
				return false;
			}
			if(pw==""){
				alert("비밀번호를 입력하십시오.");
				return false;
			}
            $.ajax({
                //요청 데이터를 받아 처리하는 서버/페이지 컨트롤러
                url:"/ajax/getUser.do",
                //post 방식일 때 서버로 전송할 데이터 String or object
                data:id + pw,
                contentType:'application/json;charset=utf-8;',
                //전송 방식 : post, get, put
                method:"POST",
                //반환받을 데이터타입 : json, xml, script, html
                dataType:"json"
            })
            //요청 처리 성공 시 처리할 문장
            .done(function(res){
                console.log(res);
            })
            //요청 처리 실패 시 처리할 문장
            .fail(function(xhr, status, errorThrown){
                $("#msg").text(xhr.status+". 로그인에 실패하였습니다.");
            });
        });
    });
    </script>
    </div>
